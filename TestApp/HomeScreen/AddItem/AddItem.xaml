<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.HomeScreen.AddItem.AddItem"
             Title="AddItem">
        <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Name -->
            <Label Text="Name" />
            <Entry Placeholder="Enter name" Text="{Binding Name}" />

            <!-- Category -->
            <Label Text="Category" />
            <Entry Placeholder="Enter category" Text="{Binding Category}" />

            <!-- Car -->
            <Label Text="Car" />
            <Entry Placeholder="Enter car" Text="{Binding Car}" />

            <!-- Quantity -->
            <Label Text="Quantity" />
            <Entry Placeholder="Enter quantity" Keyboard="Numeric" Text="{Binding Quantity}" />

            <!-- Type -->
            <Label Text="Type" />
            <Entry Placeholder="Enter type" Text="{Binding Type}" />

            <!-- Description -->
            <Label Text="Description" />
            <Editor Placeholder="Enter description" Text="{Binding Description}" />

            <!-- Submit Button -->
            <Button Text="Submit" Command="{Binding SubmitCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>