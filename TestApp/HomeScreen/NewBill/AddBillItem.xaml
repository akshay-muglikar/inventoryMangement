<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="TestApp.HomeScreen.NewBill.AddBillItem">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Add Bill Item" FontSize="20" HorizontalOptions="Center" />

        <Entry x:Name="ItemNameEntry" Placeholder="Item Name" />
        <Entry x:Name="ItemAmountEntry" Placeholder="Item Amount" Keyboard="Numeric" />
        <Entry x:Name="ItemQuantity" Placeholder="Item Quantity" Keyboard="Numeric" />

        <Button Text="Add Item" Clicked="OnAddItemClicked" />
        <Button Text="Cancel" Clicked="OnCancelClicked" />
    </VerticalStackLayout>

</toolkit:Popup>
